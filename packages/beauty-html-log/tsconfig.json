// tsconfig.json
{
  "compilerOptions": {
    /* 基础选项 */
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ],
}